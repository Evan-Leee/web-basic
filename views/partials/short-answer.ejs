<% var data = questions['shortAnswer'];%>

<div class="panel panel-default">
    <div class="panel-heading"> <h3><%=data.title%></h3></div>
    <div class="panel-body">
        <dl>
            <%data.content.forEach(function(element,i){%>
            <dd>
                <label><%=i+1%>. <%=element.description%></label>
            </dd>

          <textarea cols="40" rows="4" name="<%element.name%>" class="form-control"
                  ><%if(form && form[element.name]){%><%=form[element.name]%> <%}%></textarea>
            <%});%>
        </dl>
    </div>

</div>
